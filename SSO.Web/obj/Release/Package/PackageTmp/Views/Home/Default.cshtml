        //角色所拥有的模块
        var appArr = userPermission.UserRoleFunctionInfos;
        //应用分类模板
        var typeTemplate = " <div class=\"AppType\">" +
                               " <p class=\"TypeName\"><i class=\"$type_icon$\"></i> $typeName$</p>" +
